<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/doraemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="32dp"
        android:alpha="1"
        android:contentDescription="@string/doraemon"
        android:onClick="fade"
        app:layout_constraintBottom_toTopOf="@+id/nobita"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/doraemon" />

    <ImageView
        android:id="@+id/nobita"
        android:layout_width="354dp"
        android:layout_height="768dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="24dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/doraemon"
        app:srcCompat="@drawable/nobita"
        android:contentDescription="@string/string_todo" />
</androidx.constraintlayout.widget.ConstraintLayout>